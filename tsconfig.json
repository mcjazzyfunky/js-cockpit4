{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react",
    "jsxFactory": "h",
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "lib": ["es7", "dom"],
    "esModuleInterop": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "paths": {
      "js-cockpit": ["src/main/js-cockpit.ts"]
    },
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "mocha", "chai"]
  },
  "files": ["src/main/js-cockpit.ts"],
  "include": ["./src/main/**/*.*", "./src/stories/**/*.*", "src/js-cockpit.ts"],
  "exclude": ["node_modules"]
}
